package Node;

/**
 *
 * @author Salvador
 */
class Node {
 
int size;
Node next;
public Node()
   {      
       size = 0;
      next = null;   
   }
   
   public Node(int newValue)
   {      
       size = newValue;       
   }   
   public Node(int newValue, Node nextNode)
   {
       size = newValue;
       next = nextNode;    
   }
      
   public int getSize()
   {       
       return size;      
   }
   
   public Node getHead()
   {            
      return next;       
   }
   public void setValue(int newValue)
   {
       size = newValue;
   }
   public void setNext(Node newHead)
   {
       next = newHead;
   }
   
  
  
   
     
       
    
    
}
